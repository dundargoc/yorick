[diff]
    color = auto
    prompt = false
    algorithm = patience

[branch]
    color = auto

[core]
    autocrlf = input
    filemode = false
    excludesfile = ~/.config/git/ignore
    ignorecase = false
    pager = /usr/share/git/diff-highlight/diff-highlight | less -RS
    attributesfile = ~/.config/git/attributes

[github]
    user = yorickpeterse

[color]
    ui = true

[color "diff"]
    old = red
    new = green
    frag = blue

[diff "color"]
    commit = yellow normal bold

[merge]
    tool = nvim
    prompt = false

[mergetool]
    keepBackup = false
    hideResolved = true

[mergetool "nvim"]
    cmd = nvim-mergetool $LOCAL $REMOTE $MERGED

[alias]
    today = log --since=\"1 day ago\" --author=\"Yorick Peterse\" --pretty=oneline

[push]
    default = current
    autoSetupRemote = true

[commit]
    gpgsign = true

[gpg]
    format = ssh

[gpg.ssh]
    allowedSignersFile = "~/.config/git/allowed_signers"

[protocol]
    version = 2

[fetch]
    prune = true

[pull]
    rebase = false

[init]
    defaultBranch = main

[include]
    path = "~/.config/git/local"
